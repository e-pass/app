{
  "extends": ["expo/tsconfig.base"],
  "include": ["./src", "*.ts", "*.tsx", ".eslintrc.js"],
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "paths": {
      "@/": ["./*"],
      "@/assets/*": ["assets/*"],
      "@/shared/*": ["src/shared/*"],
      "@/pages/*": ["src/pages/*"],
      "@/widgets/*": ["src/widgets/*"],
      "@/features/*": ["src/features/*"],
    }
  }
}
