{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "semi": ["error", "always"],
        "eqeqeq": "error",
        "comma-spacing": "error",
        "arrow-spacing": "error",
        "block-spacing": "error",
        "object-curly-spacing": ["error", "always"],
        "jsx-quotes": "error",
        "react/react-in-jsx-scope": "off",
        "quotes": [2, "double", { "avoidEscape": true }]
    }
}
